pipeline {
    agent any

    environment {
        app_name = 'trading-app'
    }

    stages {
        stage('Init') {
            steps {
                sh 'ls'
                sh 'az version'
            }
        }
        stage('Build') {
            steps {
                sh 'echo "building"'
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy to dev"
            }
        }
    }
}